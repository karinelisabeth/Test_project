<p id="notice"><%= notice %></p>

<div class="page-header">
  <h1>Listing Roles of <%= @organisation.name %> </h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Organisation</th>
      <th>Role</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.organisation %></td>
        <td><%= role.name %></td>
        <td><%= link_to 'Show', organisation_role_path(@organisation, role) %></td>
        <td><%= link_to 'Edit', edit_organisation_role_path(@organisation, role) %></td>
        <td><%= link_to 'Destroy', [@organisation, role], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Role', new_organisation_role_path(@organisation) %>
